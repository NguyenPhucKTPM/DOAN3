<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        
    </title>
</head>
<style>
    table.table thead th {
        background-color: #f8b739;
        color: white;
    }
</style>
<body>
    <div class="container-fluid1 table-responsive py-5">
        <table class="table table-bordered table-hover">
            <thead class=" thead-danger">
              <tr>
                <th scope="col">STT</th>
                <th scope="col">Họ tên</th>
                <th scope="col">Tên tài khoản</th>
                <th scope="col">Giới tính</th>
                <th scope="col">Email</th>
                <th scope="col">Địa chỉ</th>
                <th scope="col">Quyền</th>
                <th scope="col">Cấu hình</th>
              </tr>
            </thead>
            <tbody>
            <% for(let i=0;i<data.rows.length;i++) { %>
              <tr>
                <th scope="row"><%= i+1 %></th>
                <th><%= data.rows[i].fullName %></th>
                <th><%= data.rows[i].userName %></th>
                <th><%= data.rows[i].sex %></th>
                <th><%= data.rows[i].email %> </th>
                <th><%= data.rows[i].address %></th>
                <th><%= data.rows[i].role %></th>
                <th>
                    <div class="d-flex justify-content-around">
                        <a href="/view-detail-user/<%= data.rows[i].userName %>" class="text-black">
                            <i class="fa fa-eye fa-lg" aria-hidden="true"></i>
                        </a>
                        <a href="/edit-user/<%= data.rows[i].userName %>"class="text-warning">
                            <i class="fa fa-pencil-square fa-lg" aria-hidden="true"></i>
                        </a>
                        <form action="/delete-user" method="POST">
                            <input type="hidden" value="<%= data.rows[i].userName %>" name="userName">
                            <label for="<%= data.rows[i].userName %>">
                                <span class="setting text-danger"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></span>
                            </label>
                            <input type="submit" id="<%= data.rows[i].userName %>" value="Xóa" style="display: none;">
                        </form>
                    </div>
                </th>
              </tr>
            <% } %>
            </tbody>
        </table>
    </div>
       
</body>
</html>