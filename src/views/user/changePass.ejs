<div class="container">
  <div class="d-flex justify-content-center">
    <div class="col-md-7 col-lg-6">
      <form action="/update-pass" method="post">
        <div class="row">
          <!-- Curently Password -->
          <div class="input-group col-lg-12 mb-4">
            <div class="input-group-prepend">
              <span
                class="input-group-text bg-white px-4 border-md border-right-0"
              >
                <i class="fa fa-lock text-muted"></i>
              </span>
            </div>
            <input
              id="curPass"
              type="password"
              name="curPass"
              placeholder="Nhập mật khẩu hiện tại"
              class="form-control bg-white border-left-0 border-md"
            />
          </div>

          <!-- New Password -->
          <div class="input-group col-lg-12 mb-4">
            <div class="input-group-prepend">
              <span
                class="input-group-text bg-white px-4 border-md border-right-0"
              >
                <i class="fa fa-lock text-muted"></i>
              </span>
            </div>
            <input
              id="password"
              type="password"
              name="password"
              placeholder="Nhập mật khẩu mới"
              class="form-control bg-white border-left-0 border-md"
            />
          </div>

          <!-- Confirm New Password -->
          <div class="input-group col-lg-12 mb-4">
            <div class="input-group-prepend">
              <span
                class="input-group-text bg-white px-4 border-md border-right-0"
              >
                <i class="fa fa-retweet" aria-hidden="true"></i>
              </span>
            </div>
            <input
              id="rePassword"
              type="password"
              name="rePassword"
              placeholder="Xác nhận mật khẩu mới"
              class="form-control bg-white border-left-0 border-md"
            />
          </div>

          <!-- Notification -->
          <div class="form-group col-lg-12 mx-auto mb-3">
            <span class="text-danger"><%= data.error ? data.error : '' %></span>
            <span class="text-primary"><%= data.noti ? data.noti : '' %></span>
          </div>

          <!-- Submit Button -->
          <div class="form-group col-lg-12 mx-auto mb-0">
            <button
              type="submit"
              class="form-control btn btn-primary rounded submit px-3 fs-5"
            >
              Cập nhật
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
