
<table id="table_id"  class="table table-hover" style="width: 100%;">
    <thead style="width: 100%;">
      <tr class="fw-semibold fs-6 text-gray-800 text-center">
          <th class="min-w-50px">STT</th>
          <th class="min-w-100px">Mã đơn</th>
          <th class="min-w-350px">Ngày đặt</th>
          <th class="min-w-300px">Tên khách hàng</th>
          <th class="min-w-200px">Số điện thoại</th>
          <th class="min-w-350px">Trạng thái</th>
          <th class="min-w-400px text-center">Tác vụ</th>
          <th class="min-w-350px">Xử lí</th>
      </tr>
  </thead>
  <tbody>
    <% for(let i=0;i<data.rows.length;i++) { %>
      <tr class="text-center" style="border: none;">
          <td><%= i+1 %></td>
          <td><%= data.rows[i].idDonHang %></td>
          <td><%= (new Date(data.rows[i].ngayDat)).toLocaleString('vi-VN', { dateStyle: 'short', timeStyle: 'medium' }) %></td>
          <td><%= data.rows[i].fullName %></td>
          <td><%= data.rows[i].SDT %></td>
          <!-- <td><%= data.rows[i].trangThai == 0 ? 'Chờ xác nhận' : '' %></td> -->
          <td>
            <span class="fs-10 badge-phoenix0 badge-phoenix-warning badge">
                <span class="badge-label">đang chờ</span
                    ><svg width="12.8" height="12.8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" 
                    stroke-linejoin="round" class="feather feather-clock ms-1"><g><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></g></svg>
                </span>
          </td>
          <td>
           <div class="d-flex justify-content-evenly">
               <a href="/detail-order/<%= data.rows[i].idDonHang %>" class="text-black">
                   <i class="fa fa-eye fa-lg" aria-hidden="true"></i>
               </a>
           </div>
          </td>
          <td>
            <div class="d-flex justify-content-center">
                <button class="btn btn-primary mr-2"><a href="/confirm-order/1/<%= data.rows[i].idDonHang %>" class="text-white"><i class="fa fa-check" aria-hidden="true"></i></a></button>
                <button class="btn btn-danger"><a href="/confirm-order/3/<%= data.rows[i].idDonHang %>" class="text-white"><i class="fa fa-times" aria-hidden="true"></i></a></button>
            </div>   
          </td>
      </tr>
      <% } %>
  </tbody>
</table>