  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xl-10 ftco-animate fadeInUp ftco-animated">
        <h3 class="mb-4 billing-heading">Thanh toán đơn hàng</h3>
        <div class="row align-items-end">
          <div class="col-md-6">
            <div class="form-group">
              <label for="firstname">Họ và tên:</label>
              <input
                type="text"
                id="firstname"
                class="form-control"
                placeholder=""
                name="fullName"
                value="<%= locals?.user ? locals?.user?.fullName : '' %>  "
              />
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="SDT">Số điện thoại:</label>
              <input
                type="text"
                id="SDT"
                class="form-control"
                placeholder=""
                name="SDT"
                value="<%= locals?.user ? locals?.user?.SDT : '' %>"
              />
            </div>
          </div>
          <div class="w-100"></div>
          <div class="col-md-12">
            <div class="form-group">
              <label for="email">Địa chỉ email:</label>
              <input
                type="text"
                id="email"
                class="form-control"
                placeholder=""
                name="email"
                value="<%= locals?.user ? locals?.user?.email : '' %>"
              />
            </div>
          </div>
          <div class="w-100"></div>
          <div class="col-md-12">
            <div class="form-group">
              <label for="address">Địa chỉ:</label>
              <input
                type="text"
                id="address"
                class="form-control"
                placeholder=""
                name="address"
                value="<%= locals?.user ? locals?.user?.address : '' %>"
              />
            </div>
          </div>
          <div class="w-100"></div>
          <div class="col-md-12">
            <div class="form-group">
              <label for="ghiChu">Ghi chú:</label>
              <input
                type="text"
                id="ghiChu"
                class="form-control"
                placeholder=""
                name="ghiChu"
              />
            </div>
          </div>
