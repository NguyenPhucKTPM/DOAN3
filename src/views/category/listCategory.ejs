<style>
    table.table thead th {
        background-color: #f8b739;
        color: white;
    }
</style>
<body>
    <div class="container-fluid1 table-responsive py-5">
        <table class="table table-bordered table-hover">
            <thead class=" thead-danger">
              <tr>
                <th scope="col">STT</th>
                <th scope="col">Tên danh mục</th>
                <th scope="col">Cấu hình</th>
              </tr>
            </thead>
            <tbody>
            <% for(let i=0;i<data.rows.length;i++) { %>
              <tr>
                <th scope="row"><%= i+1 %></th>
                <th><%= data.rows[i].tenDanhMuc %></th>
                <th>
                    <div class="d-flex justify-content-evenly">
                        <a href="/detail-category/<%= data.rows[i].idDanhMuc %>" class="text-black">
                            <i class="fa fa-eye fa-lg" aria-hidden="true"></i>
                        </a>
                        <a href="/edit-category/<%= data.rows[i].idDanhMuc %>"class="text-warning">
                            <i class="fa fa-pencil-square fa-lg" aria-hidden="true"></i>
                        </a>
                        <a href="/delete-category/<%= data.rows[i].idDanhMuc %>"class="text-danger">
                            <i class="fa fa-trash fa-lg" aria-hidden="true"></i>
                        </a>
                    </div>
                </th>
              </tr>
            <% } %>
            </tbody>
        </table>
    </div>