
    <style>
        table.dataTable thead th, table.dataTable thead td {
           border-bottom: none;
       }
       </style>
       
           <table id="table_id"  class="table table-hover" style="width: 100%;">
             <thead style="width: 100%;">
               <tr class="fw-semibold fs-6 text-gray-800">
                   <th class="min-w-50px">STT</th>
                   <th class="min-w-200px">Tên danh mục</th>
                   <th class="min-w-350px">Ngày tạo</th>
                   <th class="min-w-350px">Ngày sửa</th>
                   <th class="min-w-400px text-center">Tác vụ</th>
               </tr>
           </thead>
           <tbody>
             <% for(let i=0;i<data.rows.length;i++) { %>
               <tr style="border: none;">
                   <td><%= i+1 %></td>
                   <td><%= data.rows[i].tenDanhMuc%></td>
                   <td><%= (new Date(data.rows[i].ngayThem)).toLocaleString('vi-VN', { dateStyle: 'short', timeStyle: 'medium' }) %></td>
                   <td><%= data.rows[i].ngaySua == "Invalid Date" ? 'Chưa cập nhật' : (new Date(data.rows[i].ngaySua)).toLocaleString('vi-VN', { dateStyle: 'short', timeStyle: 'medium' })  %></td>
                   <td>
                    <div class="d-flex justify-content-evenly">
                        <a href="/detail-category/<%= data.rows[i].idDanhMuc %>" class="text-black">
                            <i class="fa fa-eye fa-lg" aria-hidden="true"></i>
                        </a>
                        <a href="/edit-category/<%= data.rows[i].idDanhMuc %>"class="text-warning">
                            <i class="fa fa-pencil-square fa-lg" aria-hidden="true"></i>
                        </a>
                        <a href="/delete-category/<%= data.rows[i].idDanhMuc %>"class="text-danger">
                            <i class="fa fa-trash fa-lg" aria-hidden="true"></i>
                        </a>
                    </div>
                   </td>
               </tr>
               <% } %>
           </tbody>
         </table>